.hn-modal-mask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.hn-modal-body {
  transform: translate(-50%, -50%);
  position: fixed;
  top: 50%;
  left: 50%;
}


.sr-clear {zoom:1;}
.sr-clear:before{ content:' '; display:table;}
.sr-clear:after{display:block; content:"clear"; height:0; clear:both; overflow:hidden; visibility:hidden;}

