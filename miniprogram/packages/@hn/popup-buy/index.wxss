/* packages/popup-buy/index.wxss */

.popup-buy-container {
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.popup-buy-container .content {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.popup-buy-container .btn-confirm {
  height: 98rpx;
  display: flex;
  border-radius: 0;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  background-image: linear-gradient(90deg, #ff5b1f, #f92c2c);
}

.popup-buy-container .item-img {
  border-radius: 8rpx;
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.popup-buy-container .top {
  display: flex;
  position: relative;
}

.popup-buy-container .ic_close {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  padding: 20rpx;
  color: #999;
}

.popup-buy-container .info {
  margin-left: 20rpx;
  margin-top: 50rpx;
  flex: 1;
}

.popup-buy-container .price {
  color: #e62922;
  font-size: 32rpx;
  line-height: 1;
}

.popup-buy-container .stock {
  font-size: 24rpx;
  line-height: 1;
  color: #999;
  margin-top: 20rpx;
}

.popup-buy-container .selected-spec {
  font-size: 24rpx;
  margin-top: 12rpx;
  line-height: 1.2;
  color: #333;
}

.popup-buy-container .spec-view {
  margin-top: 40rpx;
  max-height: 520rpx;
  overflow-y: scroll;
}

.popup-buy-container .spec-label {
  font-size: 28rpx;
  color: #333;
}

.popup-buy-container .spec-item {
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  margin-right: 20rpx;
  padding: 18rpx 28rpx;
  display: inline-block;
}

.popup-buy-container .spec-item.disabled {
  color: #bbb;
}

.popup-buy-container .spec-item.selected {
  background: #fef4f4;
  padding: 16rpx 26rpx;
  border: 2rpx solid rgba(230, 41, 34, 1);
  color: #e62922;
}

.popup-buy-container .count-view {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-buy-container .count-label {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.popup-buy-container .count-btns {
  display: flex;
  align-items: center;
}

.popup-buy-container .ic-move, .popup-buy-container .ic-add {
  border: 1rpx solid rgba(216, 216, 216, 1);
  font-weight: bold;
  width: 54rpx;
  height: 54rpx;
  border-radius: 28rpx;
  color: #929292;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-buy-container .ic-move-wrap {
  padding: 20rpx 10rpx 20rpx 20rpx;
}

.popup-buy-container .ic-add-wrap {
  padding: 20rpx 20rpx 20rpx 10rpx;
  margin-right: -20rpx;
}

.popup-buy-container .count-input {
  text-align: center;
  font-size: 36rpx;
  width: 120rpx;
  color: #333;
}
