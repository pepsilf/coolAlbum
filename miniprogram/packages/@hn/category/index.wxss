/* packages/category/index.wxss */

.clear {
  clear: both; 
  display: block;
}

.popper-dialog_body--right,
.popper-dialog_body--top {
  width: 100vw;
  /* height: 100vh; */
  overflow: hidden;
  background: #fff;
  /* top:100px;
  position: absolute */
} 

.category-container {
  width: 100vw;
  height: inherit;
}
.category-level,.category-items {
  float: left;
  height: inherit;
}

.type-item {
  border-left: 3px solid #fff;
  padding: 18rpx;
  text-align: center;
}


.type-item-selected {
  border-left-color: #66bb47;
  color:#66bb47;
  background-color: #fff;
}

.category-level {
  width: 30vw;
  background-color: #efefef;
}

.category-items {
  width: 70vw;
}

.category-items .inner {
  padding: 20rpx;
  padding-bottom: 80rpx;
}

.category-items .title {
  padding: 10px 0;
  font-size: 18px;
  font-weight: bold;
}

.category-items .content {
  /* flex: 1;
