}
.content .name {
  margin: 10rpx;
  height: 100rpx;

  border:1rpx solid #efefef;
  /* line-height: 100rpx; */
  border-radius: 8rpx;
  text-align: center;
}

.content .label {
  position: relative;
  font-size: 0.899rem;
  height: inherit;
  padding: 2rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}


