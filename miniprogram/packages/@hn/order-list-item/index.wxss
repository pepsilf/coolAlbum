/* packages/business/order-list-item/index.wxss */

.order-list-item {
  background: #fff;
}

.order-list-item .shop-info {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx;
  border-bottom: 1px solid #f5f5f5;
}

.order-list-item .shop-name {
  font-size: 24rpx;
  color: #333;
  line-height: 24rpx;
  margin-left: 14rpx;
  flex: 1;
}

.order-list-item .status {
  font-size: 26rpx;
  color: #E62922 ;
}

.order-list-item .img-shop {
  width: 50rpx;
  height: 50rpx;
  border-radius: 4rpx;
}

.order-list-item .ic-shop {
  color: #999;
  width: 50rpx;
  margin-left: -4rpx;
}

.order-list-item .product {
  padding: 12rpx 20rpx 12rpx 30rpx;
  background: #f9f9f9;
  display: flex;
}

.order-list-item .img-product {
  border-radius: 4rpx;
  width: 152rpx;
  height: 152rpx;
}

.order-list-item .product-info {
  margin-left: 16rpx;
  margin-top: 4rpx;
  flex: 1;
}

.order-list-item .product-info .name {
  line-height: 32rpx;
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.order-list-item .product-info .spec {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-top: 12rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}

.order-list-item .product .buy-info {
  margin-top: 4rpx;
  flex-shrink: 0;
  padding-left: 50rpx;
}

.order-list-item .product .buy-info .price {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
}

.order-list-item .product .buy-info .count {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: right;
}

.order-list-item .buttons {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 10rpx;
  border-top: 1px solid #f5f5f5;
}

.order-list-item button {
  border-radius: 100px;
  width: 152rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: #fff;
  margin: 0;
  padding: 0;
  margin-right: 20rpx;
}

.order-list-item .status {
  font-size: 26rpx;
}
