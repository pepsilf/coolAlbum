@import '../wxss/index.wxss';

.container {
  position: relative;
}

.cover-play {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 86rpx;
  height: 86rpx;
}

.hidden {
  display: none;
}

.cover-img{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
}