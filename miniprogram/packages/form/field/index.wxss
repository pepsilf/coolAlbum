/* packages/form/field/index.wxss */


.sr-field {

  display: flex;
  align-items: center;
  
}


.sr-field__text {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  padding-right: 28rpx;
}

.sr-field__line {
  position: relative;
}


.sr-field__input,.sr-field__textarea{
  flex:1;
  
  font-size:14px
}

.sr-field__input {
  padding:4px 0;
  min-height:22px;
  height:auto;
}

.sr-field__placeholder{font-size:14px; color: #666}
.sr-field__input--right {
  display: flex;
  flex: 1;
  padding-right: 28rpx;
  align-items: center;
  max-width: 380rpx;
  width: 100%;
  justify-content: flex-end;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.sr-select__icon {
  position:absolute;
  right: 20rpx;
  top: 8rpx;
}

.sr-label {
  position: relative;
  background-color: #e9e9e9;
  width: 120rpx;
  text-align: center;
  padding: 12rpx 10rpx;
  border-radius: 20rpx;
}
.sr-label__text {
  padding-right: 30rpx;
  text-align: center;
  width: 100rpx
}

.sr-tip {
  margin-left: 10rpx;
}


.sr-field__textarea {
  /* padding:4px; */
  width: 100%;
  /* border: 1px solid #efefef; */
}

.sr_display--textarea {
  padding:4px;
  border-width: 1px;
  border-style: solid;
  border-color: transparent;
  /* border: 1px solid #efefef; */
  width: 100%;

}

.sr_display__hide {
  display: none;
}

.sr-tip_len {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  color: #999999;
}

.btns{
  display: inline-block;
  background: #ccc;
  margin-left: 20rpx;
  background-color: #e9e9e9;
  width: 120rpx;
  text-align: center;
  padding: 12rpx 10rpx;
  border-radius: 20rpx;
}