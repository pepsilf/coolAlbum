.zan-tab{height:45px; position: relative;border-bottom:1rpx solid #e5e5e5;}.zan-tab__bd{width:750rpx;display:flex;flex-direction:row;background:#fff}.zan-tab__bd--fixed{position:fixed;top:0;z-index:2}.zan-tab__item{flex:1;display:inline-block;padding:0 5px;line-height:0;box-sizing:border-box;overflow:hidden;text-align:center}.zan-tab__title{display:inline-block;max-width:100%;height:44px;line-height:44px;overflow:hidden;text-overflow:ellipsis;box-sizing:border-box;word-break:keep-all;font-size:14px;color:#666}


.zan-tab__bd--scroll{display:block;white-space:nowrap;width: calc(100vw - 80rpx)}
.zan-tab__bd--scroll .zan-tab__item{min-width:80px}
.zan-tab__item--selected .zan-tab__title{
  color:#333;
  border-bottom:3px solid #66bb47
}

.sr-more-btns {
  position: absolute;
  right: 0;
  top:0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: -8px 0 12px rgba(255,255,255,.7);
  width: 80rpx
}

.sr-tab-meun {
  position: absolute;
  width: 100vw;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0 10px 12px rgba(0,0,0,.3);
  padding: 10rpx 0;
  font-size:14px;
}

.sr-tab-menu__item--select {
  border-bottom:1px solid #66bb47
} 

.sr-tab-meun .sr-tab-menu__item {
  float: left;
  width: 33%;
  height: 46px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}





